<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionOverflowMenuStyle">@style/Widget.MaterialComponents.PopupMenu.Overflow
        </item>

        <!-- Window decor -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">@bool/use_light_status</item>
        <item name="android:statusBarColor">@color/status_bar_scrim</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">
            @bool/use_light_navigation
        </item>
        <item name="android:navigationBarColor">@color/nav_bar_scrim</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="AppBar" parent="@style/Widget.MaterialComponents.AppBarLayout.Surface" />

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="DropdownMenuStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/spinner_box_stroke</item>
    </style>

    <style name="NotScannedTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/not_scanned_box_stroke</item>
    </style>

    <style name="NotSyncedTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/not_synced_box_stroke</item>
    </style>

    <style name="ScannedTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/scanned_box_stroke</item>
    </style>

    <style name="RadioButton">
        <item name="buttonTint">?attr/colorOnSurface</item>
        <item name="android:paddingStart">8dp</item>
    </style>

    <style name="LightProgressBar" parent="AppTheme">
        <item name="colorAccent">@color/white</item>
    </style>


</resources>
