<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="5dp"
    android:baselineAligned="false">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/syncedLayout"
        style="@style/ScannedTextInputLayoutStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:startIconDrawable="@drawable/ic_check_circle"
        app:startIconTint="@color/scanned_and_synced">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/syncedCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:cursorVisible="false"
            android:focusable="false"
            android:inputType="number"
            android:longClickable="false"
            android:maxLines="1"
            android:textColor="@color/scanned_and_synced"
            tools:text="5" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/notSyncedLayout"
        style="@style/NotSyncedTextInputLayoutStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_weight="1"
        app:startIconDrawable="@drawable/ic_not_synced"
        app:startIconTint="@color/scanned_but_not_synced">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/notSyncedCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:cursorVisible="false"
            android:focusable="false"
            android:inputType="number"
            android:longClickable="false"
            android:maxLines="1"
            android:textColor="@color/scanned_but_not_synced"
            tools:text="20" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/notScannedLayout"
        style="@style/NotScannedTextInputLayoutStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_weight="1"
        app:startIconDrawable="@drawable/ic_not_scanned"
        app:startIconTint="@color/not_scanned">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/notScannedCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:cursorVisible="false"
            android:focusable="false"
            android:inputType="number"
            android:longClickable="false"
            android:maxLines="1"
            android:textColor="@color/not_scanned"
            tools:text="45858696586" />

    </com.google.android.material.textfield.TextInputLayout>

</LinearLayout>